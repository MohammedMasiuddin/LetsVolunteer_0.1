    <ImageView
        android:id="@+id/imageViewsample"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.cardview.widget.CardView>
